{
  "name": "clone-control-plane",
  "private": true,
  "version": "0.1.0",
  "description": "Developer CLI aliases for Clone control plane",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "bin": {
    "clone": "./bin/clone"
  },
  "scripts": {
    "clone": "./bin/clone",
    "clone:precheck": "./bin/clone precheck",
    "clone:start": "./bin/clone start",
    "clone:stop": "./bin/clone stop",
    "clone:restart": "./bin/clone restart",
    "clone:status": "./bin/clone status",
    "clone:cleanup": "./bin/clone cleanup",
    "clone:logs": "./bin/clone logs ui",
    "clone:tail": "./bin/clone tail ui",
    "web:dev": "npm run dev --workspace @clone/web",
    "web:build": "npm run build --workspace @clone/web",
    "worker:dev": "npm run dev --workspace @clone/worker",
    "worker:build": "npm run build --workspace @clone/worker",
    "runtime:v2:run": "node scripts/runtime_supervisor.mjs run",
    "runtime:v2:start": "node scripts/runtime_supervisor.mjs start",
    "runtime:v2:stop": "node scripts/runtime_supervisor.mjs stop",
    "runtime:v2:status": "node scripts/runtime_supervisor.mjs status",
    "stack:world": "./scripts/stack_world_snapshot.sh",
    "check:oss": "./scripts/check_open_source_readiness.sh"
  }
}
